{
  "version": 1,
  "formatters": {
    "production": {
      "format": "%(asctime)s %(levelname)s `TASK_NAME` `FRAMEWORK_NAME` `COMPONENT` [%(name)s]: %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "development": {
      "format": "%(asctime)s] p%(process)s {%(pathname)s:%(lineno)d} %(levelname)s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "level": "INFO",
      "class": "logging.StreamHandler",
      "formatter": "default",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "level": "DEBUG",
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "default",
      "filename": "/var/log/bobby.log",
      "maxBytes": 10000000,
      "backupCount": 3
    }
  },
  "loggers": {
    "default": {
      "level": "DEBUG",
      "handlers": [
        "console",
        "file"
      ]
    }
  },
  "disable_existing_loggers": false
}