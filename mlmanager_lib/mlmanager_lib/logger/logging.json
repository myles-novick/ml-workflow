{
  "version": 1,
  "formatters": {
    "production": {
      "format": "%(asctime)s %(levelname)s `TASK_NAME` `FRAMEWORK_NAME` `COMPONENT` [%(name)s]: %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    },
    "development": {
      "format": "%(asctime)s] p%(process)s {%(pathname)s:%(lineno)d} %(thread)d %(levelname)s - %(message)s",
      "datefmt": "%Y-%m-%d %H:%M:%S"
    }
  },
  "handlers": {
    "console": {
      "level": "WARN",
      "class": "logging.StreamHandler",
      "formatter": "`MODE`",
      "stream": "ext://sys.stdout"
    },
    "file": {
      "level": "WARN",
      "class": "logging.handlers.RotatingFileHandler",
      "formatter": "`MODE`",
      "filename": "/var/log/`TASK_NAME`.log",
      "maxBytes": 10000000,
      "backupCount": 3
    }
  },
  "loggers": {
    "": {
      "level": "WARN",
      "handlers": [
        "console",
        "file"
      ],
      "propagate": false
    }
  },
  "disable_existing_loggers": false
}
